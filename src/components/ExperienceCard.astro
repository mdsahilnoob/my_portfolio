---
interface Props {
  title: string;
  company: string;
  period: string;
  description: string;
  skills: string[];
  link?: string;
  index: number;
}

const { title, company, period, description, skills, link, index } =
  Astro.props;
const paddedIndex = String(index + 1).padStart(2, "0");
---

<div class="experience slide-up" style={`animation-delay: ${index * 0.1}s`}>
  <div class="experience-number">{paddedIndex}</div>

  <div class="experience-content">
    <div class="experience-info">
      <div class="experience-meta">
        <span class="experience-period">{period}</span>
      </div>

      <h3>{title}</h3>
      <h4 class="experience-company">{company}</h4>

      <p class="experience-description">{description}</p>

      <div class="experience-skills">
        {skills.map((skill) => <span class="skill-tag">{skill}</span>)}
      </div>

      {
        link && (
          <div class="experience-link-wrapper">
            <a
              href={link}
              target="_blank"
              rel="noopener noreferrer"
              class="experience-link"
            >
              learn more
            </a>
          </div>
        )
      }
    </div>
  </div>
</div>

<style>
  .experience {
    padding: 64px 0;
    border-bottom: 1px solid var(--border-color);
    position: relative;
    transition: var(--transition-bounce);
  }

  .experience:last-child {
    border-bottom: none;
  }

  .experience:hover {
    transform: translateY(-4px);
  }

  .experience-number {
    position: absolute;
    top: -40px;
    right: 0;
    font-size: 120px;
    font-weight: 100;
    color: var(--tertiary-text);
    line-height: 1;
    pointer-events: none;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .experience:hover .experience-number {
    transform: translateY(-6px);
  }

  .experience-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 56px;
    align-items: center;
  }

  .experience-info {
    padding: 0 24px;
  }

  .experience-info h3 {
    font-size: calc(var(--text-size) * 1.7);
    font-weight: 300;
    margin: 0 0 12px 0;
    color: var(--primary-text);
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  .experience-company {
    font-size: calc(var(--text-size) * 1.1);
    font-weight: 400;
    margin: 0 0 20px 0;
    color: var(--secondary-text);
    letter-spacing: 0.02em;
  }

  .experience-meta {
    display: flex;
    gap: 20px;
    margin-bottom: 30px;
  }

  .experience-period {
    background: transparent;
    color: var(--tertiary-text);
    padding: 0;
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    border: none;
  }

  .experience-description {
    color: var(--secondary-text);
    line-height: 1.6;
    margin-bottom: 28px;
    font-size: 16px;
    font-weight: 300;
  }

  .experience-skills {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    margin-bottom: 20px;
  }

  .skill-tag {
    background: rgba(0, 0, 0, 0.06);
    color: var(--primary-text);
    padding: 6px 12px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0.02em;
  }

  [data-theme="dark"] .skill-tag {
    background: rgba(255, 255, 255, 0.06);
  }

  .experience-link-wrapper {
    display: flex;
  }

  .experience-link {
    color: var(--primary-text);
    text-decoration: none;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 0.02em;
    position: relative;
    transition: var(--transition-smooth);
  }

  .experience-link::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--primary-text);
    transition: width 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .experience-link:hover::after {
    width: 100%;
  }

  @media (max-width: 768px) {
    .experience {
      padding: 40px 0;
    }

    .experience-number {
      font-size: 80px;
    }

    .experience-info {
      padding: 0;
    }
  }
</style>
